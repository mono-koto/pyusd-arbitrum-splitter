<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
  <defs>
    <linearGradient id="pyusdGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#003087;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0070ba;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="splitGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#009cde;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00a8ff;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Main circle background -->
  <circle cx="50" cy="50" r="45" fill="url(#pyusdGradient)" stroke="#ffffff" stroke-width="2"/>
  
  <!-- PYUSD coin symbol -->
  <circle cx="35" cy="35" r="12" fill="url(#splitGradient)" stroke="#ffffff" stroke-width="1.5"/>
  <text x="35" y="40" font-family="Arial, sans-serif" font-size="8" font-weight="bold" fill="#ffffff" text-anchor="middle">P</text>
  
  <!-- Splitting arrows -->
  <path d="M50 30 L65 45 L50 60" fill="none" stroke="#ffffff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M55 45 L75 35" fill="none" stroke="#ffffff" stroke-width="2.5" stroke-linecap="round"/>
  <path d="M55 45 L75 55" fill="none" stroke="#ffffff" stroke-width="2.5" stroke-linecap="round"/>
  
  <!-- Target coins -->
  <circle cx="75" cy="25" r="8" fill="url(#splitGradient)" stroke="#ffffff" stroke-width="1"/>
  <circle cx="75" cy="45" r="8" fill="url(#splitGradient)" stroke="#ffffff" stroke-width="1"/>
  <circle cx="75" cy="65" r="8" fill="url(#splitGradient)" stroke="#ffffff" stroke-width="1"/>
  
  <!-- Dollar signs in target coins -->
  <text x="75" y="29" font-family="Arial, sans-serif" font-size="6" font-weight="bold" fill="#ffffff" text-anchor="middle">$</text>
  <text x="75" y="49" font-family="Arial, sans-serif" font-size="6" font-weight="bold" fill="#ffffff" text-anchor="middle">$</text>
  <text x="75" y="69" font-family="Arial, sans-serif" font-size="6" font-weight="bold" fill="#ffffff" text-anchor="middle">$</text>
</svg>